<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <div class="management-container">
                <h2>Inventory Management</h2>

                <div class="management-links">
                    <a href="/inv/add-classification" class="management-link">
                        <div class="link-card">
                            <h3>Add New Classification</h3>
                            <p>Create a new vehicle classification category</p>
                        </div>
                    </a>

                    <a href="/inv/add-inventory" class="management-link">
                        <div class="link-card">
                            <h3>Add New Vehicle</h3>
                            <p>Add a new vehicle to the inventory</p>
                        </div>
                    </a>
                </div>

                <hr style="margin: 2rem 0; border: 2px solid #333;">

                <h2 style="text-align: center;">Manage Inventory</h2>
                <p style="text-align: center; margin-bottom: 1rem;">
                    Choose a classification from the list to see the inventory items belonging to the classification.
                </p>

                <div style="text-align: center; margin: 2rem 0;">
                    <%- classificationSelect %>
                </div>

                <table id="inventoryDisplay" style="width: 100%; margin-top: 2rem;"></table>

                <noscript>JavaScript must be enabled to use this page.</noscript>
            </div>

            <script src="/js/inventory.js"></script>
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <div class="account-management">
                <h2>Welcome <%= locals.accountData.account_firstname %>!</h2>

                <p class="account-links">
                    <a href="/account/update/<%= locals.accountData.account_id %>" class="btn-link">
                        Update Account Information
                    </a>
                </p>

                <% if (locals.accountData.account_type==='Employee' || locals.accountData.account_type==='Admin' ) { %>
                    <h3>Inventory Management</h3>
                    <p>
                        <a href="/inv/" class="btn-primary"
                            style="display: inline-block; padding: 1rem 2rem; text-decoration: none;">
                            Manage Inventory
                        </a>
                    </p>
                    <% } %>
            </div>